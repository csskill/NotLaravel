{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./public/js",
    "rootDir": "./resources/js",
    "baseUrl": "./",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": ["node"],
    "jsx": "react",
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true
  },
  "include": [
    "resources/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "vendor",
    "storage"
  ]
}
